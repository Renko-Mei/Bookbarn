@model BookBarn.Models.SaleItem

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/SaleItem.css" />

<h2 style="margin-top:50px">Details</h2>

<div>
    <h4>SaleItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
