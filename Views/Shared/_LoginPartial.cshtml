@using Microsoft.AspNetCore.Identity
@using BookBarn.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="User" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a  class="dropdown-toggle" data-toggle="dropdown" href="#">Hello @UserManager.GetUserName(User)! <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a asp-area="" asp-controller="AccountInfo" asp-action="Index" title="AccountInfo">Profile</a></li>
                    <li><a asp-area="" asp-controller="AccountInfo" asp-action="ChangePassword" title="AccountInfo">Password Management</a></li>
                    <li><a asp-area="" asp-controller="AccountInfo" asp-action="OrderHistory" title="AccountInfo">Order History</a></li>
                    <li><a asp-area="" asp-controller="AccountInfo" asp-action="SalesVisualization" title="AccountInfo">Sale History</a></li>
                    <li><a asp-area="" asp-controller="Address" asp-action="Index" title="Address">Address Management</a></li>
                </ul>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="User" asp-action="Register" >Register</a></li>
        <li><a asp-area="" asp-controller="User" asp-action="Login" >Login</a></li>
    </ul>
}
