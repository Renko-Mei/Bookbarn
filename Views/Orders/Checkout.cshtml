@model BookBarn.Models.Address
<div class="row orderForm ">
    <h3 class="text-center" style="margin-top:80px">Please enter/edit your address information</h3>

    <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label asp-for="LegalName" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="LegalName" class="form-control" value=" @ViewData["LegalName"]"/>
                <span asp-validation-for="LegalName" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="StreetAddress" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="StreetAddress" class="form-control" value="@ViewData["StreetAddress"]"/>
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="City" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="City" class="form-control" value="@ViewData["City"]"/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Province" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Province" class="form-control" value="@ViewData["Province"]"/>
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Country" class="form-control" value="@ViewData["Country"]"/>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PostalCode" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="PostalCode" class="form-control" value="@ViewData["PostalCode"]"/>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="PhoneNumber" class="form-control" value="@ViewData["Phone number"]"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-8">
                <input class="btn btn-success" type="submit" value="Complete order" />
                @*<input class="btn btn-default" type="submit" value="Return " />*@
            </div>
        </div>

    </form>
</div>